@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
    decimal kdvDahil = 0;
    decimal totalUnitPrice = 0;
    decimal kdvHaric = 0;
    decimal totalKdv = 9;
    int totalQuantity = 0;
    int count = 0;
}

<!-- wishlist area start  -->
<div class="wishlist-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 ">

                @if (@ViewBag.Sepetim != null)
                {
                    <div class="cart-wrapper table-responsive">
                        <table class="shop_table cart ">
                            <thead>
                                <tr>
                                    <th colspan="3" class="product-name">ÜRÜN ADI</th>
                                    <th class="product-price">KDV</th>
                                    <th class="product-price">BİRİM FİYAT</th>
                                    <th class="product-quantity">ADET</th>
                                    <th class="product-subtotal">TOPLAM FİYAT(KDV DAHİL)</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in ViewBag.Sepetim as IList<Cls_Order>)
                                {

                                    <tr class="cart_item">
                                        <td class="remove-product">
                                            <a title="Sepetten sil" class="remove" href="@Url.Action("Cart", new {scid = item.ProductID})"><span class="icon-close"></span></a>
                                        </td>
                                        <td class="product-thumbnail">
                                            <a href="/Home/Details/@item.ProductID"><img width="114" height="130" alt="04" class="attachment-shop_thumbnail wp-post-image" src="~/assets/resimler/@item.PhotoPath"></a>
                                        </td>
                                        <td class="product-name">
                                            <a href="/Home/Details/@item.ProductID">@item.ProductName</a>
                                        </td>
                                        <td class="product-price">
                                            <span class="amount">% @item.Kdv</span>
                                        </td>
                                        <td class="product-price">
                                            <span class="amount">@item.UnitPrice TL</span>
                                        </td>
                                        <td class="product-price">
                                            <span class="amount">@item.Quantity</span>
                                        </td>
                                        <td class="product-subtotal">
                                            @{
                                                kdvDahil = Math.Round((((item.Kdv * item.UnitPrice) / 100) + item.UnitPrice) * item.Quantity, 2);
                                            }
                                            <span class="amount">@kdvDahil TL</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <span style="font-size:40px;background-color:red;color:white">SEPETİNİZ BOŞ</span>
                }

                <div class="row">
                    <div class="col-lg-2 col-md-6 col-sm-6 "></div>
                    <div class="col-lg-8 col-md-6 col-sm-6 ">
                        <div class="cart_totals">
                            <h2>Cart Totals</h2>
                            <div class="total_table">
                                <table class="table-responsive">
                                    <tbody>
                                        @foreach (var item in ViewBag.Sepetim as IList<Cls_Order>)
                                        {
                                            totalQuantity += item.Quantity;
                                            totalUnitPrice += item.UnitPrice;

                                            kdvHaric += Math.Round((item.UnitPrice * item.Quantity), 2);
                                            kdvDahil += Math.Round((((item.Kdv * item.UnitPrice) / 100) + item.UnitPrice) * item.Quantity, 2);
                                            count++;
                                            totalKdv = kdvDahil - kdvHaric;
                                        }

                                        <tr class="cart-subtotal">
                                            <th>Subtotal</th>
                                            <td><span class="amount">@kdvHaric</span></td>
                                        </tr>
                                        <tr class="shipping">
                                            <th>KDV</th>
                                            <td>@totalKdv</td>
                                        </tr>
                                        <tr class="order-total">
                                            <th>TOPLAM</th>
                                            <td><strong><span class="amount">@kdvDahil</span></strong> </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="submit_crt">
                                    <a class="nav-link" asp-controller="MainMenu" asp-action="Order">SONRAKİ ADIM</a>
                                    <a class="nav-link" asp-area="" asp-controller="MainMenu" asp-action="Order">GİRİŞ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- wishlist area end  -->
