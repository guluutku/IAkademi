@model Supplier
@{
    ViewData["Title"] = "Marka Silmek";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@* /theme/templates/admin/form_controls.html'den alındı *@

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Kategori Detayı
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body flip-scroll" action="/Supplier/SupplierDelete" method="post">
                <table class="table table-bordered table-striped table-condensed flip-content">
                    <tbody>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.SupplierID)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.SupplierID)
                            </td>
                        </tr>
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.BrandName)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.BrandName)
                            </td>
                        </tr>

                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.PhotoPath)
                            </th>
                            <td>
                                <img src="~/resimler/@Model?.PhotoPath" height="35" width="60" />
                            </td>
                        </tr>
                        
                        <tr>
                            <th width="20%">
                                @Html.DisplayNameFor(model => model.Active)
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Active)
                            </td>

                        </tr>
                    </tbody>
                </table>
                <input asp-for="SupplierID" type="hidden" />
                <div class="form-actions right1">
                    <a asp-action="SupplierIndex" class="btn btn-primary">MARKA LİSTESİ</a>
                    <input type="submit" name="name" value="SİL" class="btn btn-warning" onclick="return confirm('Silmek istediğinizden emin misiniz?')" />
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</div>