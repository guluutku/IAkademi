@* form_controls.tml template'den alındı *@

@model Supplier

@{
    ViewData["Title"] = "Marka Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> MARKA GİRİŞ FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                @* method="post" HttpPost'a gönderir *@
                <form class="form-horizontal" role="form" action="/Supplier/SupplierCreate" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            @* DisplayName'den dolayı label'in içini doldurmaya gerek yok. 'asp-for' *@
                            <label class="col-md-3 control-label" asp-for="BrandName"></label>
                            <div class="col-md-9">
                                @* required maxlength="50" 'lar server tarafında bakıldığı için yazmaya gerek yok *@
                                <input type="text" class="form-control input-lg" placeholder="Marka Adı Giriniz" asp-for="BrandName" required maxlength="100">
                            </div>
                            <span asp-validation-for="BrandName" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="PhotoPath"></label>
                        <div class="col-md-9">
                            <input type="file" asp-for="PhotoPath" class="form-control input-lg" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">AKTİF Mİ?</label>
                        <div class="col-md-9">
                            <input asp-for="Active" class="form-control input-lg" />
                        </div>
                    </div>

                    <div class="form-actions right1">
                        <a asp-action="SupplierIndex" class="btn btn-primary">KATEGORİ LİSTESİ</a>
                        <input type="submit" name="name" value="KAYDET" class="btn btn-success" />
                    </div>

                </form>
            </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->
    </div>
</div>
