@using Ders39_HtmlDersleri_NORTHWND.Models
@model List<Products>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UrunleriListele</title>
